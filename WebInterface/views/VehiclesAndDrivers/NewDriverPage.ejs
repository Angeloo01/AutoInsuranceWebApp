<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>New Vehicle Form</title>
</head>

<body>
    <nav class="navbar navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand mb-0 h1" href="/">EasyAutoInsurance</a>
            <span class="navbar-text" style="float:left;">
                Logged in as <%= email %>
            </span>
            <a class="btn btn-primary" href="/logout" role="Logout">Logout</a>
        </div>
    </nav>
    <form class="needs-validation" action="/customer/vehicle/addVehicle/<%= VIN %>/<%= pNo %>" method="post">
        <div class="container-fluid" style="max-width:960px;">
            <div class=text-center>
                <h4 class="mb-3" style="margin-top:30px; padding-bottom:40px;">Add a New Driver to Vehicle</h4>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="col-12">
                        <label for="License-Date" class="form-label">License Date</label>
                        <input type="date" class="form-control" id="LicenseDate" name="LicenseDate" placeholder=""
                            value="" required>
                    </div>
                </div>
                <div class="col-6">
                    <div class="col-12">
                        <label for="License Number" class="form-label">License Number</label>
                        <input type="text" class="form-control" id="LicenseNumber" name="LicenseNumber" placeholder=""
                            value="" required>
                    </div>
                </div>
                <div class="col-6">
                    <div class="col-12">
                        <label for="License-Prov" class="form-label">License Prov</label>
                        <select class="form-select" id="licenseProv" name="licenseProv" required>
                            <option value="">Choose...</option>
                            <option>AB</option>
                            <option>QC</option>
                            <option>BC</option>
                            <option>ON</option>
                            <option>MB</option>
                            <option>SK</option>
                            <option>NB</option>
                            <option>NL</option>
                            <option>NT</option>
                            <option>NS</option>
                            <option>PE</option>
                            <option>YT</option>
                        </select>
                    </div>
                </div>
                <div class="col-6">
                    <div class="col-12">
                        <label for="License Class" class="form-label">License Class</label>
                        <input type="text" class="form-control" id="LicenseClass" name="LicenseClass" placeholder=""
                            value="" required>
                    </div>
                </div>
                <div class="col-6">
                    <div class="col-12">
                        <label for="fName" class="form-label">First Name</label>
                        <input type="text" class="form-control" id="fName" name="fName" placeholder="" value=""
                            required>
                    </div>
                </div>
                <div class="col-6">
                    <div class="col-12">
                        <label for="mName" class="form-label">Middle Name</label>
                        <input type="text" class="form-control" id="mName" name="mName" placeholder="" value=""
                            required>
                    </div>
                </div>
                <div class="col-6">
                    <div class="col-12">
                        <label for="lName" class="form-label">Last Name</label>
                        <input type="text" class="form-control" id="lName" name="lName" placeholder="" value=""
                            required>
                    </div>
                </div>
                <div class="col-6">
                    <div class="col-12">
                        <label for="Birth-Date" class="form-label">Birth Date</label>
                        <input type="date" class="form-control" id="bDate" name="bDate" placeholder="" value=""
                            required>
                    </div>
                </div>
                <div class="col-6">
                    <div class="col-12">
                        <label for="Training" class="form-label">Training</label>
                        <input type="text" class="form-control" id="Training" name="Training" placeholder="" value=""
                            required>
                    </div>
                </div>
                <div class="col-6">
                    <div class="col-12">
                        <label for="Grid-Rating" class="form-label">Grid Rating</label>
                        <input type="text" class="form-control" id="GridRating" name="GridRating" placeholder=""
                            value="" required>
                    </div>
                </div>
                <div class="col-6">
                    <div class="col-12">
                        <label for="Sex" class="form-label">Sex</label>
                        <select class="form-select" id="sex" name="sex" required>
                            <option value="">Choose...</option>
                            <option>Male</option>
                            <option>Female</option>
                        </select>
                    </div>
                </div>
                <div class="col-6">
                    <div class="col-12">
                        <label for="P_O_Operator" class="form-label">P_O_Operator</label>
                        <select class="form-select" id="po" name="po" required>
                            <option value="">Choose...</option>
                            <option>Primary</option>
                            <option>Occasional</option>
                        </select>
                    </div>
                </div>
                <div class="col-12">
                    <div class="col-12">
                        <label for="Relationship" class="form-label">Relationship To Policy Owner</label>
                        <input type="text" class="form-control" id="relationship" name="relationship" placeholder=""
                            value="" required>
                    </div>
                </div>
                <button class="w-100 btn btn-primary btn-md" type="submit" style="padding: 10px; margin-top:20px;">Add
                    Driver</button>
                <a class="btn btn-danger mb-3 mt-3 col-12" href="/customer/viewVehicle/<%=VIN%>/<%=pNo%>">Go Back</a>
            </div>
        </div>
    </form>
    <script>
        // Example starter JavaScript for disabling form submissions if there are invalid fields
        (function () {
            'use strict'

            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.querySelectorAll('.needs-validation')

            // Loop over them and prevent submission
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()

    </script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
        integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous">
        </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
        integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
        crossorigin="anonymous"></script>
</body>

</html>