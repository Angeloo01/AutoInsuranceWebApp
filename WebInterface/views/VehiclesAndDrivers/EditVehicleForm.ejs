<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Edit Vehicle Form</title>
</head>

<body>
    <nav class="navbar navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand mb-0 h1" href="/">EasyAutoInsurance</a>
            <span class="navbar-text" style="float:left;">
                Logged in as <%= email %>
            </span>
            <a class="btn btn-primary" href="/logout" role="Logout">Logout</a>
        </div>
    </nav>

    <div class="container-fluid" style="max-width:900px;">
        <div class=text-center>
            <h4 class="mb-3" style="margin-top:30px; padding-bottom:40px;">Update Vehicle Information For Vehicle
                Currently In Policy <%= pNo %>
            </h4>
        </div>
        <% const v=information %>
            <form class="needs-validation" action="/vehicle/updateVehicle/<%= vin %>/<%= p %>" method="post">
                <div class="row">
                    <div class="col-6">
                        <div class="col-12">
                            <label for="Year" class="form-label">Vehicle Year</label>
                            <input type="text" class="form-control" id="year" name="year" placeholder=""
                                value="<%=v.Year%>" required>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="col-12">
                            <label for="Make" class="form-label">Vehicle Make</label>
                            <input type="text" class="form-control" id="make" name="make" placeholder=""
                                value="<%= v.Make %>" required>
                        </div>
                    </div>
                    <div class="col-6">
                        <label for="Usage" class="form-label">Usage</label>
                        <select class="form-select" id="uses" name="uses" required>
                            <option value="<%= v.Uses %>">Choose...</option>
                            <option>Personal Vehicle</option>
                            <option>Business Vehicle</option>
                        </select>
                    </div>
                    <div class="col-6">
                        <div class="col-12">
                            <label for="km/yr" class="form-label">Km/yr</label>
                            <input type="text" class="form-control" id="km" name="km" placeholder=""
                                value="<%=v.Km_per_yr %>" required>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="col-12">
                            <label for="Lease-Status" class="form-label">Lease Status</label>
                            <select class="form-select" id="lease" name="lease" required>
                                <option value="<%= v.Lease_status %>">Choose...</option>
                                <option>Leased</option>
                                <option>Owned</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="col-12">
                            <label for="Driving-Record" class="form-label">Driving Record</label>
                            <input type="text" class="form-control" id="drivingrecord" name="drivingrecord"
                                placeholder="" value="<%= v.Driving_record %>" required>
                        </div>
                    </div>

                    <button class="w-100 btn btn-primary btn-md" type="submit"
                        style="padding: 10px; margin-top:20px;">Add
                        Vehicle</button>
                </div>
            </form>
    </div>
    <script>
        // Example starter JavaScript for disabling form submissions if there are invalid fields
        (function () {
            'use strict'

            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.querySelectorAll('.needs-validation')

            // Loop over them and prevent submission
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()

    </script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
        integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous">
        </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
        integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
        crossorigin="anonymous"></script>
</body>

</html>