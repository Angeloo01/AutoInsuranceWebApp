<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author"
        content="Edited by: Angelo Gonzales and Mohamed Yassin. Original: Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Hugo 0.88.1">
    <title>Customer Edit Information Form</title>

    <link rel="canonical" href="https://getbootstrap.com/docs/5.1/examples/checkout/">



    <!-- Bootstrap core CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">


    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }

        @media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }
    </style>


    <!-- Custom styles for this template -->
    <link href="form-validation.css" rel="stylesheet">
</head>

<body class="bg-light">

    <div class="container">
        <main>
            <div class="py-5 text-center">
                <h1 class="h1 mb-3 fw-bold">Easy Auto Insurance</h1>
                <h2>Edit Information Form</h2>
                <!-- <p class="lead">Below is an example form built entirely with Bootstrap’s form controls. Each required form group has a validation state that can be triggered by attempting to submit the form without completing it.</p> -->
            </div>

            <div>
                <h4 class="mb-3">Please Edit Any Information You Want </h4>
                <% for (i of information) { %>
                    <form class="needs-validation" action="/customer/editInformation" method="post" novalidate>
                        <div class="row g-3">

                            <div class="col-12">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" name="email" value="<%=i.Email %>"
                                    required>
                                <div class="invalid-feedback">
                                    Please enter a valid email address.
                                </div>
                            </div>

                            <div class="col-12">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" class="form-control" id="password" name="password"
                                    value="<%=i.Password %>" required>
                                <div class="invalid-feedback">
                                    Please enter a valid password address.
                                </div>
                            </div>
                            <div class="col-12">
                                <label for="phone" class="form-label">Phone number</label>
                                <input type="phone" class="form-control" id="phone" name="phone"
                                    value="<%=i.Phone_No %>" required>
                                <div class="invalid-feedback">
                                    Please enter a valid phone number address.
                                </div>
                            </div>

                            <div class="col-6">
                                <label for="sex" class="form-label">Sex</label>
                                <select class="form-select" id="sex" name="sex" required aria-label="select example">
                                    <option value="<%=i.Sex %>">
                                        <%=i.Sex %>
                                    </option>
                                    <option value="M">Male</option>
                                    <option value="F">Female</option>
                                </select>
                                <div class="invalid-feedback">Please select a valid sex</div>
                            </div>

                            <div class="col-6">
                                <label for="address" class="form-label">Address</label>
                                <input type="text" class="form-control" id="address" name="address" value="<%=i.Addr_Line
                                    %>" required>
                                <div class=" invalid-feedback">
                                    Please enter your shipping address.
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label for="country" class="form-label">Country</label>
                                <select class="form-select" id="country" name="country" required>
                                    <option value="<%=i.Country %>">
                                        <%=i.Country %>
                                    </option>
                                    <option>Canada</option>
                                </select>
                                <div class="invalid-feedback">
                                    Please select a valid country.
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label for="province" class="form-label">Province/Territory</label>
                                <select class="form-select" id="province" name="province" required>
                                    <option value="<%=i.Province %>">
                                        <%=i.Province %>
                                    </option>
                                    <option>Alberta</option>
                                </select>
                                <div class="invalid-feedback">
                                    Please provide a valid province.
                                </div>
                            </div>

                            <hr class="my-4">
                            <h4 class="mb-3">Please enter your chequing information</h4>
                            <div class="col-sm-4">
                                <label for="transitno" class="form-label">Transit Number</label>
                                <input type="text" class="form-control" id="transitno" name="transitno"
                                    value="<%=i.Transit_No %>" required>
                                <div class="invalid-feedback">
                                    Valid Transit Number is required.
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <label for="instno" class="form-label">Institute Number</label>
                                <input type="text" class="form-control" id="instno" name="instno"
                                    value="<%=i.Institute_No %>" required>
                                <div class="invalid-feedback">
                                    Valid Institute Number is required.
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <label for="acctno" class="form-label">Account Number</label>
                                <input type="text" class="form-control" id="acctno" name="acctno"
                                    value="<%=i.Acct_No %>" required>
                                <div class="invalid-feedback">
                                    Valid Account Number is required.
                                </div>
                            </div>
                        </div>


                        <hr class="my-4">

                        <button class="w-100 btn btn-primary btn-lg" type="submit">Confirm Changes</button>
                    </form>
                    <% } %>
            </div>
        </main>
        <footer class="my-5 pt-5 text-muted text-center text-small">
            <p class="mb-1">&copy; 2022–2022 Easy Auto Insurance</p>
        </footer>
    </div>

    <script>
        // Example starter JavaScript for disabling form submissions if there are invalid fields
        (function () {
            'use strict'

            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.querySelectorAll('.needs-validation')

            // Loop over them and prevent submission
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()

    </script>

</body>

</html>