<body class="bg-light">

  <div class="container">
    <main>
      <div class="py-5 text-center">
        <h1 class="h1 mb-3 fw-bold">Easy Auto Insurance</h1>
        <h2>Review Claim</h2>
        <!-- <p class="lead">Below is an example form built entirely with Bootstrap’s form controls. Each required form group has a validation state that can be triggered by attempting to submit the form without completing it.</p> -->
      </div>

      <div>
        <h4 class="mb-3">Please review customer information</h4>
        <form method='post'>
          

          <div class="row g-3">
            <div class="col-sm-4">
              <label for="firstName" class="form-label">First name</label>
              <input type="text" class="form-control" id="firstName" name="firstName" placeholder="" value="<%= FName %>" readonly>
              <div class="invalid-feedback">
                Valid first name is required.
              </div>
            </div>

            <div class="col-sm-4">
              <label for="middleName" class="form-label">Middle name</label>
              <input type="text" class="form-control" id="middleName" name="middleName" placeholder="" value="<%= MName %>" readonly>
              <div class="invalid-feedback">
                Valid middle name is required.
              </div>
            </div>

            <div class="col-sm-4">
              <label for="lastName" class="form-label">Last name</label>
              <input type="text" class="form-control" id="lastName" name="lastName" placeholder="" value="<%= LName %>" readonly>
              <div class="invalid-feedback">
                Valid last name is required.
              </div>
            </div>

            <div class="col-12">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" id="email" name="email" value="<%= Email %>" readonly>
              <div class="invalid-feedback">
                Please enter a valid email address.
              </div>
            </div>
            <div class="col-12">
              <label for="phone" class="form-label">Phone number</label>
              <input type="phone" class="form-control" id="phone" name="phone" value="<%= Phone_No %>" readonly>
              <div class="invalid-feedback">
                Please enter a valid phone number address.
              </div>
            </div>

            <div class="col-6">
              <label for="policy" class="form-label">Policy</label>
              <input type="text" class="form-control" id="policy" name="policy" value="<%= PolicyNo %>" readonly>
              <div class="invalid-feedback">Please select a valid policy</div>
            </div>

            <div class="col-6"></div>

            <div class="col-6">
              <label for="type" class="form-label">Type</label>
              <input type="text" class="form-control" id="type" name="type" value="<%= Type %>" readonly>
              <div class="invalid-feedback">Please select a valid type</div>
            </div>

            <div class="col-6"></div>

            <div class="col-6">
              <label for="accident_date" class="form-label">Accident Date</label>
              <input type="text" class="form-control" id="accident_date" name="accident_date" value="<%= Accident_Date.split('T')[0] %>" readonly>
            </div>

            <div class="col-6"></div>

            <div class="col-4">
              <label for="driver" class="form-label">Driver</label>
              <input type="text" class="form-control" id="driver" name="driver" value="<%= driver.FName %> <%= driver.LName %>" readonly>
              <div class="invalid-feedback">Please select a valid driver</div>
            </div>

            <div class="col-4">
              <label for="F_T_Party" class="form-label">F_T_Party</label>
              <input type="text" class="form-control" id="F_T_Party" name="F_T_Party" value="<%= F_T_Party %>" readonly>
              <div class="invalid-feedback">Please select a valid F_T_Party</div>
            </div>

            <div class="col-4">
              <label for="Percent_At_Fault" class="form-label">Percent At Fault</label>
              <input type="text" class="form-control" id="Percent_At_Fault" name="Percent_At_Fault" value="<%= Percent_At_Fault %>" readonly>
              <div class="invalid-feedback">Please select a valid Percent_At_Fault</div>
            </div>

            <div class="col-6">
              <label for="vehicle" class="form-label">Vehicle</label>
              <input type="text" class="form-control" id="vehicle" name="vehicle" value="<%= vehicle.Year %> <%= vehicle.Make %>" readonly>
            </div>

            <div class="col-6"></div>

            <div class="col-12">
              <label for="location" class="form-label">Location</label>
              <input type="text" class="form-control" id="location" name="location" value="<%= location %>" readonly>
            </div>

            <!-- <div class="col-12">
              <label for="comments">Comments</label>
              <textarea class="form-control" id="comments" name="comments" rows="6" readonly></textarea>
            </div> -->

          </div>

          <hr class="my-4">

          <div class="w-100 btn-toobar mb-3 btn-group-justified" role="toolbar" aria-label="Basic example">
            <button class="btn btn-lg btn-primary btn-block" type="submit" name="Status" value="Accepted">Accept</button>
            <button class="btn btn-lg btn-danger btn-block" type="submit" name="Status" value="Rejected">Reject</button>
          </div>
        </form>
      </div>
  </div>
  </main>

  <footer class="my-5 pt-5 text-muted text-center text-small">
