<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>View and Edit Policies</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<nav class="navbar navbar-dark bg-primary">
    <div class="container-fluid">
        <a class="navbar-brand mb-0 h1" href="/">EasyAutoInsurance</a>
        <span class="navbar-text" style="float:left;">
            Logged in as <%= email %>
        </span>
        <a class="btn btn-primary" href="/logout" role="Logout">Logout</a>
    </div>
</nav>


<body class="text-center">
    <main class="container-lg" style="max-width:1080px;">
        <% for (i of information) { %>
            <div class="row">
                <h4 align="left" class="col-12 mb-3 mt-3"> Your Information for Policy Number: <%= i.PolicyNo %>
                </h4>
            </div>
            <div class="row">
                <label for="Status" class="form-label">Status</label>
                <div class="input-group col-12 mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input type="text" class="form-control" id="Premium" name="Premium" placeholder=""
                        value="<%= i.Status %>" readonly>
                    <div class="input-group-append">
                        <span class="input-group-text">.00</span>
                    </div>
                </div>
                <label for="Premium" class="form-label">Premium</label>
                <div class="input-group col-12 mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input type="text" class="form-control" id="Premium" name="Premium" placeholder=""
                        value="<%= i.Premium %>" readonly>
                    <div class="input-group-append">
                        <span class="input-group-text">.00</span>
                    </div>
                </div>

                <label for="Deductible" class="form-label">Deductible</label>
                <div class="input-group col-12 mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input type="text" class="form-control" id="Deductible" name="Deductible" placeholder=""
                        value="<%= i.Deductible %>" readonly>
                    <div class="input-group-append">
                        <span class="input-group-text">.00</span>
                    </div>
                </div>

                <div class="col-12 mb-3">
                    <label for="Date" class="form-label">Eff. Date</label>
                    <input type="text" class="form-control" id="Date" name="Date" placeholder=""
                        value="<%= i.EffectiveDate.substring(0,10) %>" readonly>
                </div>
            </div>

            <hr />
            <div class="row">
                <div class="col-6">
                    <a class="btn btn-primary mb-3 mt-3 col-12" role="button"
                        href="/customer/pinkcard/<%= i.PolicyNo %>">View Pink Card</a>
                </div>
                <div class="col-6">
                    <a class="btn btn-primary mb-3 mt-3 col-12" role="button"
                        href="/customer/vehicles/<%= i.PolicyNo %>">Edit
                        Vehicles and Drivers</a>
                </div>
            </div>
            <% } %>
                <a class="btn btn-danger mb-3 mt-3 col-12" href="/customer/listPolicies">Go Back</a>
    </main>
    <script>
        // Example starter JavaScript for disabling form submissions if there are invalid fields
        (function () {
            'use strict'

            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.querySelectorAll('.needs-validation')

            // Loop over them and prevent submission
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()

    </script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
        integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
        integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
        crossorigin="anonymous"></script>
</body>

</html>